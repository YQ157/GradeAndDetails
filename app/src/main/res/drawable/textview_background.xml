<!-- res/drawable/textview_border_left_top.xml -->
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <solid android:color="@android:color/transparent"/> <!-- 背景透明 -->

    <!-- 边框设置 -->
    <stroke
        android:width="1dp"
        android:color="@android:color/black"
        android:dashWidth="0dp"
        android:dashGap="0dp"/>

    <!-- 边框只应用于左边和上边 -->
    <padding
        android:top="1dp"
        android:left="1dp"
        android:right="0dp"
        android:bottom="0dp"/>
</shape>
