<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <com.github.clans.fab.FloatingActionMenu
        android:id="@+id/main_fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="7dp"
        app:menu_icon="@drawable/help_24"
        app:menu_fab_size="mini"
        android:elevation="12dp"
        app:menu_colorNormal="@color/blueLight"
        app:menu_colorPressed="@color/blueVariantLight"
        app:menu_labels_colorNormal="@color/blueLight"
        app:menu_labels_colorPressed="@color/blueVariantLight"
        android:layout_gravity="bottom|end">
        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/relogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/relogin_24"
            app:fab_size="mini"
            app:fab_label="退出登陆"
            app:fab_colorNormal="@color/blueVariantLight"
            app:fab_colorPressed="@color/blueLight"
            />
        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/about"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/face_24"
            app:fab_size="mini"
            app:fab_label="关于作者"
            app:fab_colorNormal="@color/blueVariantLight"
            app:fab_colorPressed="@color/blueLight"
            />
    </com.github.clans.fab.FloatingActionMenu>
    <LinearLayout
        android:id="@+id/loading"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <com.google.android.material.progressindicator.CircularProgressIndicator
            android:id="@+id/cir"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:indeterminate="true"
            app:indicatorSize="60dp"
            app:trackThickness="5dp"
            app:indicatorColor="@color/blueLight"/>
        <TextView
            android:id="@+id/progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="加载ing..."
            android:textSize="12sp"
            android:layout_gravity="center"/>
    </LinearLayout>
    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/refresh"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="15dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:text="课程名"
                    android:textStyle="bold"
                    android:id="@+id/name"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:gravity="center"
                    android:background="@drawable/textview_background"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    style="@style/TextSize" />
                <TextView
                    android:text="成绩"
                    android:textStyle="bold"
                    android:id="@+id/score"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:background="@drawable/textview_background"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    style="@style/TextSize" />
                <TextView
                    android:text="详情"
                    android:textStyle="bold"
                    android:id="@+id/detail"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.5"
                    android:gravity="center"
                    android:background="@drawable/textview_background"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    style="@style/TextSize" />
                <TextView
                    android:text="学分"
                    android:textStyle="bold"
                    android:id="@+id/credits"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:background="@drawable/textview_background"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    style="@style/TextSize" />
            </LinearLayout>
            <androidx.core.widget.NestedScrollView
                android:id="@+id/scroll"
                android:visibility="invisible"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/grade_list"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="260dp"/>
                </LinearLayout>
            </androidx.core.widget.NestedScrollView>
        </LinearLayout>
    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>